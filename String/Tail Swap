//https://www.codewars.com/kata/5868812b15f0057e05000001/train/javascript


function tailSwap(arr) {
  const [aa, ab] = arr[0].split(':');
  const [bb, ba] = arr[1].split(':');
  
  return [`${aa}:${ba}`, `${bb}:${ab}` ]
}



====================================
function tailSwap(arr) {
  const [a, b] = arr.map(el => el.split(":"));
  return [`${a[0]}:${b[1]}`, `${b[0]}:${a[1]}`];
}
